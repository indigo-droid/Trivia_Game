{
    "version": 2,
    "builds": [
      { "src": "frontend/public/**", "use": "@vercel/static" },
      { "src": "api/**/*.js", "use": "@vercel/node" }
    ],
    "routes": [
      { 
        "src": "/api/(.*)", 
        "dest": "/api/$1",
        "methods": ["GET"] 
      },
      { 
        "src": "/(.*)", 
        "dest": "/frontend/public/$1" 
      }
    ]
  }